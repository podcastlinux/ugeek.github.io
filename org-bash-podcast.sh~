ITUNES_DESCRIPTION="Podcast de Tecnología"
ITUNES_NAME="uGeek"
ITUNES_EMAIL="ugeekpodcast@gmail.com"
ITUNES_EXPLICIT="No"
ITUNES_KEYWORDS="Tecnología,Linux"
ITUNES_IMAGE="https://ugeek.github.io/blog/icon/ugeek.png"
ITUNES_LOCATION="Barcelona, Spain"
ITUNES_FREQUENCY="Weekly"
ITUNES_CATEGORY="Technology"
COPYRIGHT="Angel uGeek. copyright 2019"



################################################################################
# MAIN CONTENT. INDEX PAGE
INDEX=$(echo "Bienvenido al Blog del Podcast de **uGeek**. Aquí encontraras tutoriales y notas que voy tomando en el proceso de aprendizaje de todo aquello que os explico en el [[https://ugeek.github.io][Podcast]]. En la sección [[https://ugeek.github.io/tags.html][Tags]], encontraras todos los Artículos y Podcast, clasificados por temáticas.")

BLOG=$(cat index_blog.org)

#######
#ULTIMO_TITULO_PODCAST=$(wget -q -O- "http://feeds.feedburner.com/ugeek" | grep '<title>' | head -3 | tail -1 | sed 's/<title>/ /g' | sed 's/<\/title>/ /g')
#ULTIMO_PODCAST=$(wget -q -O- "http://feeds.feedburner.com/ugeek" | grep -o '<enclosure url="[^"]*' | grep -o '[^"]*$' | head -1)

ULTIMO_TITULO_PODCAST=$(wget -qO- https://anchor.fm/s/106db04/podcast/rss | xml2 | grep "/rss/channel/item/title=" | sed -e 's|/rss/channel/item/title=||g' | head -1)
ULTIMO_PODCAST=$(wget -qO- https://anchor.fm/s/106db04/podcast/rss  | xml2 | grep "/rss/channel/item/enclosure/@url=" | sed -e 's|/rss/channel/item/enclosure/@url=||g' | head -1)


# MAIN CONTENT NEXT. INDEX PAGE
INDEX_NEXT=$(echo "
* $ULTIMO_TITULO_PODCAST
#+HTML: <audio controls=''><source src="$ULTIMO_PODCAST" />Tu navegador no soporta reproductor de Podcast.</audio>'
")
################################################################################
# FOOTER WEB. ALL PAGES
PIE_WEB=$(echo '<p style="text-align: center;"><a href="http://creativecommons.org/licenses/by-nc-sa/4.0/" rel="license"><img style="border-width: 0px; display: block; margin-left: auto; margin-right: auto;" src="https://i.creativecommons.org/l/by-nc-sa/4.0/88x31.png" alt="Licencia de Creative Commons" /></a><br />Este obra est&aacute; bajo una <a href="http://creativecommons.org/licenses/by-nc-sa/4.0/" rel="license">licencia de Creative Commons Reconocimiento-NoComercial-CompartirIgual 4.0 Internacional</a>.</p><br><br><br>')
################################################################################
# RSS
LOGO_FEED="ugeek.png"
################################################################################
# GOOGLE ANALITYCS & META TAG
GOOGLE_ANALITYCS=$(echo "#+HTML_HEAD: <!-- Global site tag (gtag.js) - Google Analytics -->
#+HTML_HEAD: <script async src=\"https://www.googletagmanager.com/gtag/js?id=UA-131560140-1\"></script>
#+HTML_HEAD: <script>
#+HTML_HEAD:  window.dataLayer = window.dataLayer || [];
#+HTML_HEAD:  function gtag(){dataLayer.push(arguments);}
#+HTML_HEAD:  gtag('js', new Date())
#+HTML_HEAD:
#+HTML_HEAD:  gtag('config', 'UA-131560140-1');
#+HTML_HEAD: </script>
#+HTML_HEAD:<link rel="canonical" href="https://ugeek.gitlab.io" />
#+HTML_HEAD:<meta property="og:type" content="website" />
#+HTML_HEAD:<meta property="og:locale" content="es_ES" />
#+HTML_HEAD:<meta property="og:title" content="Blog de uGeek" />
#+HTML_HEAD:<meta name="author" content="Angel. uGeek" />


#+HTML_HEAD:<meta property="og:site_name" content="uGeek. Blog de Tecnología"/>
#+HTML_HEAD:<meta property="og:description" content="uGeek. Blog y Podcast de  Tecnología sobre GNU/Linux, Android, Domotica,..." />
#+HTML_HEAD:<meta property="og:image" content="https://ugeek.gitlab.io/icon/ugeek-256x256.png" />

#+HTML_HEAD:<meta property="og:image" content="https://ugeek.gitlab.io/ugeek.jpg" />
#+HTML_HEAD:<meta property="og:image:secure_url" content="https://ugeek.gitlab.io/ugeek.jpg" />
#+HTML_HEAD:<meta property="og:image:width" content="640" />
#+HTML_HEAD:<meta property="og:image:height" content="366" />

#+HTML_HEAD:<meta name="twitter:site" content="@ugeekpodcast" />
#+HTML_HEAD:<meta name="twitter:card" content="summary_large_image" />
#+HTML_HEAD:<meta name="twitter:description" content="uGeek. Blog y Podcast de  Tecnología sobre GNU/Linux, Android, Domotica,..." />
#+HTML_HEAD:<meta name="twitter:title" content="uGeek. Blog de Tecnología" />
#+HTML_HEAD:<meta name="twitter:site" content="@ugeekpodcast" />
#+HTML_HEAD:<meta name="twitter:image" content="https://ugeek.gitlab.io/icon/ugeek-256x256.png" />

#+HTML_HEAD:<link rel="shortlink' href='https://ugeek.gitlab.io/" />
#+HTML_HEAD:<link rel="shortcut icon" href="https://ugeek.gitlab.io/icon/ugeek-256x256.png" type="image/x-icon" />
#+HTML_HEAD:<link rel="icon" href="https://ugeek.gitlab.io/icon/ugeek-256x256.png" sizes="32x32" />
#+HTML_HEAD:<link rel="icon" href="https://ugeek.gitlab.io/icon/ugeek-256x256.png" sizes="192x192" />
#+HTML_HEAD:<link rel="apple-touch-icon-precomposed" href="https://ugeek.gitlab.io/icon/ugeek-256x256.png" />


#+HTML_HEAD:<link rel="alternate" type="application/rss+xml" title="uGeek. Blog de Tecnología" href="https://ugeek.gitlab.io/feed/" />

    
")








################################################################################
TITLE=$(grep "#+TITLE:" podcast.org | cut -d " " -f2-)
LINK=$(grep "#+LINK:" podcast.org | cut -d " " -f2-)
DESCRIPTION=$(grep "#+DESCRIPTION:" podcast.org | cut -d " " -f2-)
grep ":TITLE:" podcast.org | cut -d " " -f2- | sed 's/,/|/g' > title
grep ":EXPORT_FILE_NAME:" podcast.org | cut -d " " -f2- | sed 's/ /-/g' | awk '{print tolower($0)}' > link
grep ":DESCRIPTION:" podcast.org | cut -d " " -f2- | sed 's/,/|/g'> description 
grep ":EXPORT_DATE:"  podcast.org | cut -d " " -f2 > date-
grep ":EXPORT_DATE:"  podcast.org | cut -d " " -f3 > hour
grep ":CATEGORY:"  podcast.org | cut -d " " -f2- > category
grep ":TAG:" podcast.org | cut -d " " -f2- | tr -d ' ' | sed "s|$|,,,,,,,,,|" | cut -d, -f -10 > tag
#
grep ":IMAGE:" podcast.org | cut -d " " -f2- | tr -d ' ' > image
grep ":URL_AUDIO:" podcast.org | cut -d " " -f2 | tr -d ' ' > audio
grep ":EXPLICIT:" podcast.org | cut -d " " -f2- | tr -d ' ' > explicit



cat date- |  tr -d '-' > date
paste -d, date title link description date- category tag hour image audio explicit > postsID.csv
cat postsID.csv | sort -r | cut -d, -f2- > posts.csv
cat postsID.csv | sort | cut -d, -f2- > posts4feed.csv
cat posts.csv | cut -d "," -f5 | sed '/^ *$/d' | uniq | sort > category.csv
cat tag | cut -d "," -f1 > tags.csv
cat tag | cut -d "," -f2 >> tags.csv 
cat tag | cut -d "," -f3 >> tags.csv
cat tag | cut -d "," -f4 >> tags.csv
cat tag | cut -d "," -f5 >> tags.csv
cat tag | cut -d "," -f6 >> tags.csv
cat tag | cut -d "," -f7 >> tags.csv
cat tag | cut -d "," -f8 >> tags.csv
cat tag | cut -d "," -f9 >> tags.csv
cat tag | cut -d "," -f10 >> tags.csv
cat tags.csv | sed '/^ *$/d' | sort | uniq > tag.csv
echo " " >> podcast.org
NUM_POSTS=$(cat posts.csv |  wc -l)
TODO=$(grep -irq "* TODO" podcast.org)
if [ $? -eq 0 ]; then
clear
echo ">>> org-bash-podcast va a publicar el Post <<<"
grep -n "* TODO" podcast.org |  cut -d ":" -f1 > TODO.txt
LINES_BLOG=$(cat podcast.org  | wc -l)
cat podcast.org  | wc -l >> TODO.txt
echo "Hay $NUM_POSTS Podcasts y $LINES_BLOG líneas en podcast.org"
rm org/*.org
ONE_LINE=$(cat TODO.txt | head -1)
sed -i '1d' TODO.txt
while read TWO_LINE; do
LAST_LINE=$(($TWO_LINE - 1))
CATEGORY=$(cat podcast.org | sed -n  "$ONE_LINE,$LAST_LINE"p | sed 's/* TODO/*/g' | grep ":CATEGORY:"  | cut -d " " -f2)
cat podcast.org | sed -n  "$ONE_LINE,$LAST_LINE"p | sed 's/* TODO/*/g' >> org/$CATEGORY.org
echo "$GOOGLE_ANALITYCS" > temp_post.org
sed -n "5,20 p" podcast.org >> temp_post.org
cat podcast.org | sed -n  "$ONE_LINE,$LAST_LINE"p | sed 's/* TODO/*/g' >> temp_post.org

#
FILE_AUDIO=$(grep ":URL_AUDIO:" temp_post.org | cut -d " " -f2)
echo "
#+HTML: <audio controls=''><source src="$FILE_AUDIO" />Tu navegador no soporta reproductor de Podcast.</audio>'" >> temp_post.org
#

ONE_LINE=$(echo $TWO_LINE)
PUB=$(expr $PUB + 1)
echo "Publicando Podcast Nº $PUB     $(grep ":TITLE:" temp_post.org | cut -d " " -f2-)"

FILE_DATE=$(grep ":EXPORT_DATE:" temp_post.org | cut -d " " -f2)
DATE_MOD=$(grep ":EXPORT_DATE:" temp_post.org | cut -d " " -f4)
if [ -n "$DATE_MOD" ];
then
    echo " "
    echo " ***** Podcast Modificado *****"
    UPDATE=$(echo " y *actualizado* el $(date -d"$DATE_MOD" +'%A %d %B del %Y')")
fi


echo "- [[https://ugeek.github.io/podcast.xml][Suscribete al Podcast de uGeek]]
- Visita los artículo y podcast en [[https://ugeek.github.io/][https://ugeek.github.io/]]"  >> temp_post.org


echo "#+HTML: <br>" >> temp_post.org
echo "Publicado por Angel el $(date -d"$FILE_DATE" +'%A %d %B del %Y') $UPDATE" >> temp_post.org
UPDATE=$(echo " ")
    

echo "#+HTML: <br><br> " >> temp_post.org
echo "También te puede interesar:
 "  >> temp_post.org
CATEGORY=$(grep ":CATEGORY:" temp_post.org | cut -d " " -f2)
grep -i $CATEGORY posts.csv | sed '1d' > category_temp_post.csv
cat category_temp_post.csv | head -n10 > cat_temp.csv
cp cat_temp.csv category_temp_post.csv
while read LINEA; do  
OTHERSTITLE=$(echo $LINEA | cut -d, -f1)
OTHERSLINKS=$(echo $LINEA | cut -d, -f2)
OTHERSDATE=$(echo  $LINEA | cut -d, -f4)
echo " - [[$LINK/post/$OTHERSDATE-$OTHERSLINKS.html][$OTHERSTITLE]] " >> temp_post.org
echo " "
done < category_temp_post.csv
FILE_TITLE=$(grep ":TITLE:" temp_post.org | cut -d " " -f2- | sed 's/|/,/g')
FILE_NAME=$(grep ":EXPORT_FILE_NAME:" temp_post.org | cut -d " " -f2- |awk '{print tolower($0)}' |  sed 's/ /-/g')
FILE_DATE=$(grep ":EXPORT_DATE:" temp_post.org | cut -d " " -f2)
FILE=$(echo "$FILE_DATE-$FILE_NAME")
FILE_DESCRIPTION=$(grep ":DESCRIPTION:" temp_post.org | cut -d " " -f2-)
DESCRIPTION_P=$(echo $FILE_DESCRIPTION | sed 's/|/,/g')
sed -i "1i #+DESCRIPTION: $DESCRIPTION_P" temp_post.org
sed -i "1i #+LINK: $LINK" temp_post.org
FILE_TAG=$(grep ":TAG:" temp_post.org | cut -d " " -f2-)
TAG=$(echo $FILE_TAG | sed 's/|/,/g')
sed -i "1i #+KEYWORDS: $TAG" temp_post.org                                                                                                  
echo "#+TITLE: $FILE_TITLE" > $FILE.org
cat temp_post.org >> $FILE.org
ORG=$(echo '#+HTML:<br><br><br><p style="text-align: center;">Powered by <a href="https://github.com/ugeek/org-bash-podcast" target="_blank" rel="noopener">org-bash-podcast</a></p><p style="text-align: center;">Writing in orgmode whith emacs</p>')
echo "$ORG $PIE_WEB" >> $FILE.org
emacs $FILE.org --batch -f org-html-export-to-html --kill
rm $FILE.org
sed -i 's|./images-blog/|../images-blog/|g' $FILE.html
sed -i 's|__icon/|../icon/|g' $FILE.html
sed -i 's|__css/|../css/|g' $FILE.html
sed -i 's|href="index.html"|href="../index.html"|g' $FILE.html
sed -i 's|href="list.html"|./href="../list.html"|g' $FILE.html
sed -i 's|href="tag.html"|./href="../tag.html"|g' $FILE.html
mv $FILE.html post/$FILE.html
done < TODO.txt
rm TODO.txt
#xdg-open "post/$FILE.html" &#
firefox "post/$FILE.html" &
clear
echo "Generando Feed del Blog"
TODAY=$(date +'%A %d de %B del %Y')
echo '<?xml version="1.0" encoding="utf-8"?>
<rss xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
  <channel>
    <title>'$TITLE'</title>
    <link>'$LINK'</link>
    <description>'$DESCRIPTION'</description>
    <image>
       <url>'$LINK'/'$LOGO_FEED'</url>
       <title>'$TITLE'</title>
       <link>'$LINK'</link>
    </image>
    <language>es</language>
    <atom:link href="'$LINK'/feed.xml" rel="self" type="application/rss+xml" />
    <generator>org-bash-podcast static site generator (https://github.com/ugeek/org-bash-podcast)</generator>'> feed.xml
while read LINEA; do 
TITLE_F="$(echo $LINEA | cut -d, -f1 | sed 's/|/,/g')"
LINK_P="$(echo $LINEA | cut -d, -f2)"
DESC="$(echo $LINEA | cut -d, -f3 | sed 's/|/,/g')"
DATE="$(echo $LINEA | cut -d, -f4)"
HORA="$(echo $LINEA | cut -d, -f16)"
DATEPU="$(LANG=en_us_88591 ; date -d"$DATE" +'%a, %d %b %Y')"
DATEPUB=$(echo "$DATEPU $HORA +0100")
LANG=locale
GUID="http://ugeek.github.io"
echo "   <item>" >> feed.xml
echo "    <title>$TITLE_F</title>" >> feed.xml
echo "    <link>$LINK/post/$DATE-$LINK_P.html</link>" >> feed.xml
echo "    <description>$DESC... 
&lt;p&gt;Sigue leyendo el post completo de &lt;a href="$LINK/post/$DATE-$LINK_P.html"&gt;$TITLE_F&lt;/a&gt;

&lt;/a&gt;&lt;/p&gt;&lt;p&gt;

&lt;a href="$LINK"&gt;Visita $TITLE&lt;/a&gt;

&lt;/a&gt;&lt;/p&gt;&lt;p&gt;

&lt;a href="https://ugeek.github.io"&gt;Visita uGeek Podcast&lt;/a&gt;

&lt;/a&gt;&lt;/p&gt;&lt;p&gt;

&lt;a href="http://feeds.feedburner.com/ugeek"&gt;Suscribete al Podcast de uGeek&lt;/a&gt;

</description>" >> feed.xml


echo "    <pubDate>$DATEPUB</pubDate>" >> feed.xml
echo "    <guid>$LINK/post/$DATE-$LINK_P.html</guid>
   </item>" >> feed.xml
done < posts.csv
echo "  </channel>
</rss>" >> feed.xml
# Feed
echo "Generando Feed del Podcast"
TODAY=$(date +"%a, %d %b %Y %H:%M +0100")
echo '<rss xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:rawvoice="http://www.rawvoice.com/rawvoiceRssModule/" version="2.0">
  <channel>
    <title>'$TITLE'</title>
    <link>'$LINK'</link>
    <description>'$DESCRIPTION'</description>
    <image>
       <url>'$LINK'/'$LOGO_FEED'</url>
       <title>'$TITLE'</title>
       <link>'$LINK'</link>
    </image>
    <language>es-es</language>
    <copyright>'$COPYRIGHT'</copyright>
    <atom:link href="'$LINK'/podcast.xml" rel="self" type="application/rss+xml"/>
    <itunes:summary>'$ITUNES_DESCRIPTION'</itunes:summary>
   <itunes:owner>
    <itunes:name>'$ITUNES_NAME'</itunes:name>
    <itunes:email>'$ITUNES_EMAIL'</itunes:email>
   </itunes:owner>
    <itunes:explicit>'$ITUNES_EXPLICIT'</itunes:explicit>
    <itunes:keywords>'$ITUNES_KEYWORDS'</itunes:keywords>
    <itunes:image href="'$ITUNES_IMAGE'"/>
    <rawvoice:location>'$ITUNES_LOCATION'</rawvoice:location>
    <rawvoice:frequency>'$ITUNES_FREQUENCY'</rawvoice:frequency>
    <itunes:category text="'$ITUNES_CATEGORY'"/>
    <pubDate>'$TODAY'</pubDate>
    <generator>org-bash-podcast static site generator (https://github.com/ugeek/org-bash-podcast)</generator>'> podcast.xml
while read LINEA; do 
TITLE_F="$(echo $LINEA | cut -d, -f1 | sed 's/|/,/g')"
LINK_P="$(echo $LINEA | cut -d, -f2)"
DESC="$(echo $LINEA | cut -d, -f3 | sed 's/|/,/g')"
DATE="$(echo $LINEA | cut -d, -f4)"
AUDIO_POD="$(echo $LINEA | cut -d, -f18)"
IMAGE_POD="$(echo $LINEA | cut -d, -f17)"
EXPLICIT_POD="$(echo $LINEA | cut -d, -f19)"
TAG_POD="$(echo $LINEA | cut -d, -f8,9,10,11,12)"
DATEPU="$(LANG=en_us_88591 ; date -d"$DATE" +'%a, %d %b %Y')"
DATEPUB=$(echo "$DATEPU $HORA +0100")
LANG=locale
GUID="http://ugeek.github.io"
echo "   <item>" >> podcast.xml
echo "    <title>$TITLE_F</title>" >> podcast.xml
echo "    <link>$LINK/post/$DATE-$LINK_P.html</link>" >> podcast.xml
echo "    <pubDate>$DATEPUB</pubDate>" >> podcast.xml
echo "    <description>$DESC
&lt;p&gt;Sigue leyendo el post completo de &lt;a href="$LINK/post/$DATE-$LINK_P.html"&gt;$TITLE_F&lt;/a&gt;

&lt;/a&gt;&lt;/p&gt;&lt;p&gt;

&lt;a href="$LINK"&gt;Visita $TITLE&lt;/a&gt;

&lt;/a&gt;&lt;/p&gt;&lt;p&gt;

&lt;a href="https://ugeek.github.io"&gt;Visita uGeek Podcast&lt;/a&gt;

&lt;/a&gt;&lt;/p&gt;&lt;p&gt;

&lt;a href="http://feeds.feedburner.com/ugeek"&gt;Suscribete al Podcast de uGeek&lt;/a&gt;

</description>" >> podcast.xml
echo "    <enclosure url=\""$AUDIO_POD"\"/>" >> podcast.xml
echo "    <guid>$LINK/post/$DATE-$LINK_P.html</guid> 
          <itunes:summary>$DESC</itunes:summary>
          <itunes:image href=\""$IMAGE_POD"\"/>  
          <itunes:keywords>$TAG_POD</itunes:keywords>
          <itunes:explicit>$EXPLICIT_POD</itunes:explicit>
   </item>" >> podcast.xml
done < posts.csv
echo "  </channel>
</rss>" >> podcast.xml
#
echo "Generando Feed por Categoría"
WORD="emacs"
awk '/,emacs,/ { print }' posts.csv > emacs.csv
echo '<?xml version="1.0" encoding="utf-8"?>
<rss xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
  <channel>
    <title>'$TITLE'</title>
    <link>'$LINK'</link>
    <description>'$DESCRIPTION'</description>
    <image>
       <url>'$LINK'/'$LOGO_FEED'</url>
       <title>'$TITLE'</title>
       <link>'$LINK'</link>
    </image>
    <language>es</language>
    <atom:link href="'$LINK'/feed.xml" rel="self" type="application/rss+xml" />
    <generator>org-bash-podcast static site generator (https://github.com/ugeek/org-bash-podcast)</generator>'> $WORD.xml
while read LINEA; do 
TITLE_F="$(echo $LINEA | cut -d, -f1 | sed 's/|/,/g')"
LINK_P="$(echo $LINEA | cut -d, -f2)"
DESC="$(echo $LINEA | cut -d, -f3 | sed 's/|/,/g')"
DATE="$(echo $LINEA | cut -d, -f4)"
DATEPU="$(LANG=en_us_88591 ; date -d"$DATE" +'%a, %d %b %Y')"
DATEPUB=$(echo "$DATEPU $HORA +0100")
LANG=locale
GUID="http://ugeek.github.io"
echo "   <item>" >> $WORD.xml
echo "    <title>$TITLE_F</title>" >> $WORD.xml
echo "    <link>$LINK/post/$DATE-$LINK_P.html</link>" >> $WORD.xml
echo "    <description>$DESC</description>" >> $WORD.xml
echo "    <pubDate>$DATEPUB</pubDate>" >> $WORD.xml
echo "    <guid>$LINK/post/$DATE-$LINK_P.html</guid>
   </item>" >> $WORD.xml
done < emacs.csv
echo "  </channel>
</rss>" >> $WORD.xml
echo "Generando Página Home"
cat posts.csv | head -n5 > posts_home.csv
sed -n "1,20 p" podcast.org > index.org
echo "$GOOGLE_ANALITYCS" >> index.org
echo '#+HTML_HEAD:<meta name="google-site-verification" content="ENnOaWTA9BlPz40VgoCRCpIlCgS4weW2KXOP9oqftpg" />' >> index.org
echo " " >> index.org
echo "$INDEX" >> index.org
echo "$INDEX_NEXT" >> index.org
echo "$BLOG" >> index.org
echo " " >> index.org
echo "* Últimos Podcasts" >> index.org
echo " " >> index.org
while read LINEA; do 
TPOST=$(echo $LINEA | cut -d, -f1 | sed 's/|/,/g')
UPOST=$(echo $LINEA | cut -d, -f2)
DPOST=$(echo $LINEA | cut -d, -f4)
echo "- /$DPOST/ - [[$LINK/post/$DPOST-$UPOST.html][$TPOST]] " >> index.org
echo " " >> index.org
done < posts_home.csv

echo "$ORG $PIE_WEB"  >> index.org
emacs index.org --batch -f org-html-export-to-html --kill
sed -i 's|__icon/|icon/|g' index.html
sed -i 's|__css/|css/|g' index.html
rm index.org posts_home.csv
echo "Generando Listado de Podcast"
echo "#+TITLE: Podcast. $TITLE" > list.org
echo "#+LINK: $LINK/list.html" >> list.org
echo "#+DESCRIPTION: Etiquetas de $TITLE" >> list.org
sed -n "4,20 p" podcast.org >> list.org
echo "$GOOGLE_ANALITYCS" >> list.org
echo "* $NUM_POSTS Podcast" >> list.org
echo " " >> list.org
while read LINEA; do 
TPOST=$(echo $LINEA | cut -d, -f1 | sed 's/|/,/g')
UPOST=$(echo $LINEA | cut -d, -f2)
DPOST=$(echo $LINEA | cut -d, -f4)
echo "- /$DPOST/ - [[$LINK/post/$DPOST-$UPOST.html][$TPOST]] " >> list.org
echo " " >> list.org
done < posts.csv 
echo "$ORG $PIE_WEB"  >> list.org
emacs list.org --batch -f org-html-export-to-html --kill
sed -i 's|__icon/|icon/|g' list.html
sed -i 's|__css/|css/|g' list.html
rm list.org
echo "Generando Tags"
echo "#+TITLE: Tags. $TITLE" > tag.org
echo "#+LINK: $LINK/tag.html" >> tag.org
echo "#+DESCRIPTION: Etiquetas de $TITLE" >> tag.org
sed -n "4,20 p" podcast.org >> tag.org
echo "$GOOGLE_ANALITYCS" >> tag.org
echo "* Etiquetas de los Podcasts" >> tag.org
echo " " >> tag.org
while read TAG; do 
grep -i "$TAG" posts.csv > temp_tag.csv
echo "** $TAG" >> tag.org
NUM_TAGS=$(cat tag.csv | wc -l)
while read LINEA; do 
TPOST=$(echo $LINEA | cut -d, -f1 | sed 's/|/,/g' )
UPOST=$(echo $LINEA | cut -d, -f2)
DPOST=$(echo $LINEA | cut -d, -f4)
echo "- /$DPOST/ - [[$LINK/post/$DPOST-$UPOST.html][$TPOST]] " >> tag.org
done < temp_tag.csv
done < tag.csv 
cp tag.org  tag-podcast.org
rm temp_tag.csv
echo "$ORG $PIE_WEB" >> tag.org
emacs tag.org --batch -f org-html-export-to-html --kill
sed -i 's|__icon/|icon/|g' tag.html
sed -i 's|__css/|css/|g' tag.html
rm tag.org category_temp_post.csv cat_temp.csv
rm *~
else
echo "No hay ningun Post con estado TODO"
fi
rm audio image explicit hour 
rm posts.csv emacs.csv
rm  posts4feed.csv postsID.csv 
rm tag.csv tags.csv tag temp_post.org
rm category.csv
rm title link description category date date-  
sed -i '$d' podcast.org

